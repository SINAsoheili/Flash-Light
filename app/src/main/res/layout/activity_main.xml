<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.flashlight.Light_Button_View_Background
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ToggleButton
        android:id="@+id/btn_light"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_select"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:id="@+id/tv_sos"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="S.O.S"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/sos_btn_background"
        android:padding="10dp"
        />

    <ImageView
        android:id="@+id/iv_info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/info"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/tv_sos"
        android:layout_marginLeft="30dp"
        android:background="@drawable/natural_btn_background"
        android:padding="8dp"
        />

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/setting_icon"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_sos"
        android:layout_marginRight="30dp"
        android:background="@drawable/natural_btn_background"
        android:padding="1dp"
        />

</RelativeLayout>